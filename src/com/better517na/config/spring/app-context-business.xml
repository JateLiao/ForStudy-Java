<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

 <!-- 统一参数组件Springbean -->
 <bean id="paramDataSourceHelper" class="com.better517na.factory.DataSourceHelper">
  <property name="applicationName" value="${param.applicationName}"></property>
  <property name="databaseName" value="${param.databaseName}"></property>
  <property name="bizTime" value="${param.bizTime}"></property>
  <property name="isRead" value="${param.isRead}"></property>
  <property name="initialSize" value="${pool.initialSize}" />
  <property name="maxActive" value="${pool.maxActive}" />
  <property name="maxIdle" value="${pool.maxIdle}" />
  <property name="maxWait" value="${pool.maxWait}" />
  <property name="poolPreparedStatements" value="${pool.poolPreparedStatements}" />
  <property name="defaultAutoCommit" value="${pool.defaultAutoCommit}" />
  <property name="keyIdConfigPath" value="${keyIdConfigPath}"></property>
 </bean> 


 <bean id="paramDataSource" class="com.better517na.dataSource.DynamicRoutingDataSource">
  <!-- <property name="showSql" value="${param.showSql}"></property> -->
  <property name="dataSourceHelper" ref="paramDataSourceHelper"></property>
 </bean>

 <bean id="paramBusiness"
  class="com.better517na.unifiedParameters.business.ParamBusiness"></bean> 
</beans> 